{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules/", ".next/", "coverage/", "playwright/", "public/", "sound-examples/"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {			
					"noNonNullAssertion": "warn"				  
			},
			"complexity": {
        		"noForEach": "off"
      		},
			"suspicious": {
       			"noArrayIndexKey": "warn"
      		},
			"correctness": {
       			"noUnusedVariables": "warn",
       			"noUnusedLabels": "warn"
      		}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
